@{
}

@model List<CarRent.Models.Entities.Car>

<h1> Cars </h1>

<br></br>
<form asp-action="List" method="get">
    <div>
        <p>
            Find by category: <input type="text" name="categoryNumber" value=""/>
            <input type="submit" value="Search">
            <a asp-action="List">Remove Filter</a>
        </p>
    </div>

</form>
<table class="table">
    <thead> 
        <tr>
            <th>Id</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Daily_price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var car in Model)
        {
            <tr>
                <td>@car.ID</td>
                <td>@car.brand</td>
                <td>@car.model</td>
                <td>@car.daily_price</td>
                <td>@car.CategoryID</td>
            </tr>
        }
    </tbody>
</table>