<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-3 card p-3">
        <h2 class="text-center text-info" style="text-decoration: underline solid;">Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <!--Username mezok-->
            <div class="mb-1">
                <label class="control-label" for="typeUsername">Username*</label>
                <input type="text" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!--Jelszo mezok-->
            <div class="mb-1">
                <label class="control-label" for="typePassword">Password*</label>
                <input type="password" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!--Login button-->  <!--gomb kozepre, meg nem mukodik-->
            <div class="row">
                <div class="col-4" style=" align: center;">
                    <input type="submit" value="Login" class="btn btn-primary btn-sm float-end"/>
                     <!--<button class="btn btn-outline-light btn-lg px-5" type="submit" onclick="login()">
                        Belépés
                    </button>-->
                </div>
            </div>

        </form>
    </div>
